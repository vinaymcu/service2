{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"javaInterfaces": [
		"java.io.Serializable"
	],
	"properties": {
		"device": {
			"type": "object",
			"javaInterfaces": [
				"java.io.Serializable"
			],
			"properties": {
				"deviceId": {
					"type": "string",
					"maxLength": 20
				},
				"serialNumber": {
					"type": "string",
					"maxLength": 20
				},
				"softwareVersion": {
					"type": "string",
					"maxLength": 50
				},
				"model": {
					"type": "string",
					"maxLength": 30
				},
				"vendor": {
					"type": "string",
					"maxLength": 30
				},
				"deviceType": {
					"type": "string",
					"maxLength": 30
				},
				"platform": {
					"type": "string",
					"maxLength": 30
				},
				"uiVersion": {
					"type": "string",
					"maxLength": 50
				},
				"maxBandwidthUpdates": {
					"type": "integer",
					"minimum": 0,
					"maximum": 999
				},
				"drmId": {
					"type": "string",
					"maxLength": 30
				}
			},
			"additionalProperties": false,
			"required": [
				"deviceId"
			]
		}
	},
	"additionalProperties": false,
	"required": [
		"device"
	]
}