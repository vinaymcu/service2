{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
  	"userName": {      
      "type": "string"      
    },
    "maxAllowedIPTVDevices": {
       "type": "integer"      
    },
    "bandwidthProfile": {
      "type": "string"              
    },
    "overrideBandwidth": {
      "type": "integer"      
    },
    "qoeControlBandwidth": {
      "type": "integer"      
    },
    "retEnable": {
      "type": "boolean"
    },
    "rccEnable": {
      "type": "boolean"
    },
    "networkBufferSize": {
      "type": "integer"
    },
    "natBindingRefreshInterval": {
      "type": "integer"
    }, 
    "limitsPerContentQuality": {
      "type": "array",      
      "items": {
        "type": "object",
        "properties": {
          "contentQuality": {
            "type": "string"                      
          },
          "maxDevices": {
            "type": "integer"                        
          },
          "maxStreams": {
            "type": "integer"                     
          }
        },
        "required": [
          "contentQuality",
          "maxDevices",
          "maxStreams"
        ]
      }
    }
  }
}



